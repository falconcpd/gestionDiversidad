@model gestionDiversidad.ViewModels.ListaAsignaturasView

@{
    ViewData["Title"] = "listAsignaturas";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ListaAsignaturas.First().Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListaAsignaturas)
        {
                <tr>
                    <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="borrarAsignatura" asp-controller="TAsignaturas" 
                    asp-route-id="@item.Id"
                   asp-route-nif="@Model.Nif" asp-route-rol="@Model.Rol">Borrar</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
@if(Model.Rol == Model.SesionRol)
{
    <div>
        <a asp-controller="TUsuarios" asp-action="volverPerfil" 
        asp-route-nif=@Model.Nif asp-route-rol=@Model.Rol>Volver al perfil principal</a>
    </div>
}
else
{
        <div>
            <a asp-controller="TUsuarios" asp-action="volverPerfil" 
            asp-route-nif=@Model.Nif asp-route-rol=@Model.Rol>Volver para atrás</a>
        </div>
    <div>
        <a asp-controller="TUsuarios" asp-action="volverPerfil" 
        asp-route-nif=@Model.SesionNif asp-route-rol=@Model.SesionRol>Volver a perfil principal</a>
    </div>
}

@if (Model.Permiso.Insertar)
{
    <div>
        <a asp-controller="TAsignaturas" asp-action="insertarAsignatura"
       asp-route-nif=@Model.Nif asp-route-rol=@Model.Rol>
            Crear asignatura</a>
    </div>
}

