@model gestionDiversidad.ViewModels.CrearView

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Asignatura</h1>

<h4>TAsignatura</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="crearAsignatura" asp-controller="TAsignaturas">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Asignatura.Nombre" class="control-label"></label>
                <input asp-for="Asignatura.Nombre" class="form-control" />               
                <span asp-validation-for="@Model.Asignatura.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" name="nif" value="@Model.Nif" />
                <input type="hidden" name="rol" value="@Model.Rol" />
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    @if (TempData["NombreRepetido"] != null)
    {
        <div class="alert alert-danger">@TempData["NombreRepetido"]</div>
    }
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
