@model gestionDiversidad.ViewModels.AsignaturaView

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>¿Seguro que quieres borrar esto?</h3>
<div>
    <h4>TAsignatura</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Asignatura.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Asignatura.Nombre)
        </dd>
    </dl>
    
    <form asp-action="confirmarBorrado" asp-controller="TAsignaturas">
        <input type="hidden" name="id" value="@Model.Asignatura.Id" />
        <input type="hidden" name="rol" value="@Model.Rol" />
        <input type="hidden" name="nif" value="@Model.Nif" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="listaAsignaturas" asp-controller="TAsignaturas"
         asp-route-nif="@Model.Nif" asp-route-rol="@Model.Rol">Vuelve a la lista de asignaturas</a>
    </form>
</div>
