@model gestionDiversidad.ViewModels.TInformes.CrearInformeView

@{
    ViewData["Title"] = "crearInforme";
}

<h1>Crear nuevo Informe</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="crearInformeNuevo" asp-controller="TInformes"
              method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="margin-top: 10px; margin-bottom: 10px;">
                <label asp-for="@Model.MedicoNif" class="control-label">Médicos: </label>
                <select asp-for="MedicoNif" asp-items="@Model.ListaMedicos?.Select(m => new SelectListItem { Text = m.Nombre, Value = m.Nif })"></select>
                <span asp-validation-for="@Model.MedicoNif" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px; margin-bottom: 10px;">
                <label asp-for="@Model.AlumnoNif" class="control-label">Alumnos: </label>
                <select asp-for="AlumnoNif" asp-items="@Model.ListaAlumnos?.Select(a => new SelectListItem { Text = a.Nombre, Value = a.Nif })"></select>
                <span asp-validation-for="@Model.AlumnoNif" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px; margin-bottom: 10px;">
                <label asp-for="@Model.PDF">Seleccione el archivo PDF:</label>
                <input asp-for="@Model.PDF" type="file" accept=".pdf">
                <span asp-validation-for="@Model.PDF" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px; margin-bottom: 10px;">
                <input type="hidden" name="actualRol" value="@Model.ActualRol" />
                <input type="hidden" name="actualNif" value="@Model.ActualNif" />
                <input type="submit" value="Crear informe" class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="listaInformes" asp-controller="TInformes">
                    Volver a la lista de informes
                </a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
