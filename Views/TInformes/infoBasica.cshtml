@if (Model.Rol == Model.SesionRol)
{
    <div>
        <a asp-controller="TInformes" asp-action="listaInformes"
       asp-route-nif=@Model.Nif asp-route-rol=@Model.Rol>Volver al perfil principal</a>
    </div>
}
else
{
    <div>
        <a asp-controller="TInformes" asp-action="listaInformes"
       asp-route-nif=@Model.Nif asp-route-rol=@Model.Rol>Volver para atrás</a>
    </div>
    @if (!(Model.SesionRol == constDefinidas.rolProfesor))
    {
        <div>
            <a asp-controller="TInformes" asp-action="listaInformes"
       asp-route-nif=@Model.SesionNif asp-route-rol=@Model.SesionRol>Volver a perfil principal</a>
        </div>
    }
    
}

@if (Model.Permiso.Modificar)
{
    <form asp-controller="TInformes" asp-action="actualizarPDF" asp-route-nifAlumno="@Model.Informe.NifAlumno"
      asp-route-nifMedico=@Model.Informe.NifMedico asp-route-fecha=@Model.Informe.Fecha.ToString("yyyy-MM-ddTHH:mm:ss")
      asp-route-rolInforme=@Model.Rol asp-route-nifInforme=@Model.Nif method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="@Model.PDF" >Seleccione el archivo PDF:</label>
            <input asp-for="@Model.PDF" type="file" accept=".pdf">
        </div>
        <button type="submit" class="btn btn-primary">Subir archivo</button>
    </form>

}
