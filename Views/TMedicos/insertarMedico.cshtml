@model gestionDiversidad.ViewModels.CrearMedicoView

@{
    ViewData["Title"] = "crearMedico";
}

<h1>Crear nuevo médico</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="crearUsuarioMedico" asp-controller="TUsuarios">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Nif" class="control-label"></label>
                <input asp-for="Nif" class="form-control" />
                <span asp-validation-for="@Model.Nif" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Usuario" class="control-label"></label>
                <input asp-for="Usuario" class="form-control" />
                <span asp-validation-for="@Model.Usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ConfirmPassword" class="control-label">Confirmar Password</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Apellido1" class="control-label"></label>
                <input asp-for="Apellido1" class="form-control" />
                <span asp-validation-for="@Model.Apellido1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Apellido2" class="control-label"></label>
                <input asp-for="Apellido2" class="form-control" />
                <span asp-validation-for="@Model.Apellido2" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px; margin-bottom: 10px;">
                <input type="submit" value="Crear médico" class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="listaMedicos" asp-controller="TMedicos"
                   asp-route-volverPadre="false">
                    Volver a la lista de médicos.
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
