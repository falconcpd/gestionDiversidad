@model gestionDiversidad.ViewModels.BorrarMedicoView

@{
    ViewData["Title"] = "borrarMedico";
}

<h1>Delete</h1>

<h3>¿Seguro que quieres borrar esto?</h3>
<div>
    <h4>TMedico</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Medico.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medico.Nombre)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Medico.Nif)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medico.Nif)
        </dd>
    </dl>

    <form asp-action="confirmarBorradoMedico" asp-controller="TMedicos" method="post">
        <input type="hidden" name="nifMedico" value="@Model.Medico.Nif" />
        <input type="hidden" name="actualRol" value="@Model.ActualRol" />
        <input type="hidden" name="actualNif" value="@Model.ActualNif" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
    </form>
    <div>
        <a asp-action="listaMedicos" asp-controller="TMedicos"
           asp-route-volverPadre="false">
            Volver lista de medicos.
        </a>
    </div>
</div>

