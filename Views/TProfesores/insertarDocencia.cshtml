@model gestionDiversidad.ViewModels.TProfesores.CrearDocenciaView

@{
    ViewData["Title"] = "crearDocencia";
}

<div class="text-center">
    <h2>Crear nueva docencia</h2>
</div>

<hr />
<div class="text-center">
        <form asp-action="crearDocencia" asp-controller="TProfesores"
              method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="margin-top: 10px; margin-bottom: 10px;">
                <label asp-for="@Model.NifProfesor" class="control-label" style="display: block;">Profesor: </label>
                <select asp-for="NifProfesor" asp-items="@Model.LProfesores!.Select(p => new SelectListItem { Text = $"{p.Nombre}({p.Nif})", Value = p.Nif })" class="text-center"></select>
                <span asp-validation-for="@Model.NifProfesor" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px; margin-bottom: 10px;">
                <label asp-for="@Model.IdAsignatura" class="control-label" style="display: block;">Asignatura: </label>
                <select asp-for="IdAsignatura" asp-items="@Model.LAsignaturas!.Select(a => new SelectListItem { Text = a.Nombre, Value = a.Id.ToString() })" class="text-center"></select>
                <span asp-validation-for="@Model.IdAsignatura" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px; margin-bottom: 10px;">
                <input type="submit" value="Crear docencia" class="btn btn-primary" />
            </div>
        </form>
</div>

<div class="text-center" style="margin-top: 10px; margin-bottom: 10px;">
    <a asp-controller="TProfesores" asp-action="listaDocencias"
       asp-route-volverPadre="false" class="btn btn-dark">
       Volver atrás
   </a>
</div>
<div class="text-center">
    @if (TempData["ExisteDocencia"] != null)
    {
        <div class="alert alert-danger">@TempData["ExisteDocencia"]</div>
    }
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
