@model gestionDiversidad.ViewModels.ModificarUsuarios

@{
    ViewData["Title"] = "modificarProfesor";
}

<h1>Modificar profesor</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="confirmarCambios" asp-controller="TUsuarios"
              method="post">
            <div class="form-group">
                <label asp-for="@Model.Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Apellido1" class="control-label">Primer Apellido</label>
                <input asp-for="Apellido1" class="form-control" />
                <span asp-validation-for="@Model.Apellido1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Apellido2" class="control-label">Segundo Apellido</label>
                <input asp-for="Apellido2" class="form-control" />
                <span asp-validation-for="@Model.Apellido2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Usuario" class="control-label">Usuario</label>
                <input asp-for="Usuario" class="form-control" />
                <span asp-validation-for="@Model.Usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password" class="control-label">Contraseña</label>
                <input asp-for="Password" class="form-control" type="password" autocomplete="current-password" value="@Model.Password" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ConfirmPassword" class="control-label">Confirmar Password</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" autocomplete="current-password" value="@Model.ConfirmPassword" />
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px; margin-bottom: 10px;">
                <input type="hidden" asp-for="Nif" />
                <input type="hidden" asp-for="Rol" />
                <input type="submit" value="Modificar" class="btn btn-primary" />
            </div>
            @if (TempData["SinCambiosUsuario"] != null)
            {
                <div class="alert alert-info">@TempData["SinCambiosUsuario"]</div>
            }
        </form>
    </div>
</div>
<div>
    <a asp-controller="TUsuarios" asp-action="volverPerfil"
       asp-route-nif=@Model.Nif asp-route-rol=@Model.Rol>Volver al perfil del profesor</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


