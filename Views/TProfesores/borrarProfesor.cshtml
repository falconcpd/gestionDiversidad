@model gestionDiversidad.Models.TProfesor

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>¿Seguro que quieres borrar esto?</h3>
<div>
    <h4>TDocencia</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nif)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nif)
        </dd>
    </dl>

    <form asp-action="confirmarBorradoProfesor" asp-controller="TProfesores" method="post">
        <input type="hidden" name="nifProfesor" value="@Model.Nif" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
    </form>
    <div>
        <a asp-action="listaProfesores" asp-controller="TProfesores"
           asp-route-volverPadre="false">
            Volver lista de Profesores.
        </a>
    </div>
</div>
