@model gestionDiversidad.ViewModels.TProfesores.BorrarProfesorView

@{
    ViewData["Title"] = "borrarProfesor";
}

<div class="text-center">
    <h2>¿Seguro que quieres borrar el/la profesor/a?</h2>
</div>

<div class="text-center">
    <hr />
    <dl class="row">
        <dt>
            <strong>Nombre: </strong>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Profesor.Nombre)
        </dd>
    </dl>
    <dl class="row">
        <dt>
            <strong>Primer Apellido: </strong>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Profesor.Apellido1)
        </dd>
    </dl>
    <dl class="row">
        <dt>
            <strong>Segundo Apellido: </strong>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Profesor.Apellido2)
        </dd>
    </dl>
    <dl class="row">
        <dt>
            <strong>Nif: </strong>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Profesor.Nif)
        </dd>
    </dl>

    <form asp-action="confirmarBorradoProfesor" asp-controller="TProfesores" method="post"
          style="margin-top: 10px; margin-bottom: 10px;">
        <input type="hidden" name="nifProfesor" value="@Model.Profesor.Nif" />
        <input type="submit" value="Borrar Profesor" class="btn btn-danger" /> 
    </form>
    <div>
        <a asp-action="listaProfesores" asp-controller="TProfesores"
           asp-route-volverPadre="false" class="btn btn-dark">
            Volver atrás
        </a>
    </div>
</div>
