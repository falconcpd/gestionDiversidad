@model gestionDiversidad.ViewModels.ModificarUsuarios

@{
    ViewData["Title"] = "modificarAlumno";
}

<div>
    <h2>Modificar alumno/a</h2>
</div>

<hr />
<div class="text-center">
        <form asp-action="confirmarCambios" asp-controller="TUsuarios"
              method="post">
            <div>
            <label asp-for="@Model.Nombre" class="control-label" style="display: block;">Nombre: </label>
                <input asp-for="Nombre" />
            <div style="margin-bottom: 10px;">
                <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
            </div>                
            </div>
            <div style="margin-top: 10px; margin-bottom: 10px;">
            <label asp-for="@Model.Apellido1" class="control-label" style="display: block;">Primer Apellido: </label>
                <input asp-for="Apellido1" />
                <div style="margin-bottom: 10px;">
                    <span asp-validation-for="@Model.Apellido1" class="text-danger"></span>
                </div>            
            </div>
            <div style="margin-top: 10px; margin-bottom: 10px;">
            <label asp-for="@Model.Apellido2" class="control-label" style="display: block;">Segundo Apellido: </label>
                <input asp-for="Apellido2" />
                <div style="margin-bottom: 10px;">
                    <span asp-validation-for="@Model.Apellido2" class="text-danger"></span>
                </div>           
            </div>
            <div style="margin-top: 10px; margin-bottom: 10px;">
            <label asp-for="@Model.Usuario" class="control-label" style="display: block;">Usuario: </label>
                <input asp-for="Usuario" />
                <div style="margin-bottom: 10px;">
                    <span asp-validation-for="@Model.Usuario" class="text-danger"></span>
                </div>            
            </div>
            <div style="margin-top: 10px; margin-bottom: 10px;">
            <label asp-for="@Model.Password" class="control-label" style="display: block;">Password: </label>
                <input asp-for="Password" type="password" autocomplete="current-password" value="@Model.Password" />
                <div style="margin-bottom: 10px;">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>            
            </div>
            <div style="margin-top: 10px; margin-bottom: 10px;" >
            <label asp-for="@Model.ConfirmPassword" class="control-label" style="display: block;">Confirmar Password: </label>
                <input asp-for="ConfirmPassword" type="password" autocomplete="current-password" value="@Model.ConfirmPassword" />
                <div style="margin-bottom: 10px;">
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                </div>           
            </div>
            <div style="margin-top: 10px; margin-bottom: 10px;">
                <input type="hidden" asp-for="Nif" />
                <input type="hidden" asp-for="Rol" />
                <input type="submit" value="Modificar" class="btn btn-primary" />
            </div>
        </form>
</div>

<div class="text-center">
    <a asp-controller="TUsuarios" asp-action="volverPerfil"
       asp-route-nif=@Model.Nif asp-route-rol=@Model.Rol class="btn btn-dark">
       Volver atrás
   </a>
</div>

@if (TempData["SinCambiosUsuario"] != null)
{
    <div class="alert alert-info text-center" style="margin-top: 10px; margin-bottom: 10px;">
        @TempData["SinCambiosUsuario"]
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


