@model gestionDiversidad.ViewModels.BorrarMatriculaView

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>¿Seguro que quieres borrar esto?</h3>
<div>
    <h4>TMatricula</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NifAlumno)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NifAlumno)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdAsignatura)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdAsignatura)
        </dd>
    </dl>

    <form asp-action="confirmarBorradoMatricula" asp-controller="TAlumnos">
        <input type="hidden" asp-for="NifAlumno" />
        <input type="hidden" asp-for="IdAsignatura" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="listaMatriculas" asp-controller="TAlumnos">
            Volver lista de matriculas.
        </a>
    </form>
</div>
